@using ProjeModel.Entities
@model List<UrunResimleri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürün Resimleri</h2>
<hr />
@using (Html.BeginForm("Index", "UrunResimleri", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.Hidden("urunId", Request.QueryString["urunid"])
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Resim Seçiniz</label>
                <input type="file" name="resim">
            </div>
            <div class="form-group">
                <input id="Submit1" type="submit" class="btn btn-primary" value="Kaydet" />
            </div>
        </div>
    </div>
}
<hr />


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <img src="@item.Resim" class="img-responsive img-thumbnail" />
        </div>
    }
</div>
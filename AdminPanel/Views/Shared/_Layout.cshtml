@using ProjeModel.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Admin Panel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Kategori")">Kategoriler</a></li>
                    <li><a href="@Url.Action("Index","Kullanicilars")">Kullanıcılar</a></li>
                    <li><a href="@Url.Action("Index","SayfaKategorileris")">Sayfa Kategorileri</a></li>
                    <li><a href="@Url.Action("Index","Sayfalars")">Sayfalar</a></li>
                    <li><a href="@Url.Action("Index","Uyelers")">Üyeler</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Varyasyonlar <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index","UrunRenkleris")">Ürün Renkleri</a></li>
                            <li><a href="@Url.Action("Index","UrunNumaralaris")">Ürün Numaraları</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Index","Urunlers")">Ürünler</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Edit","Kullanicilars", new{ id= Session["Kullanici"].ToUser().id })">@Session["Kullanici"].ToUser().Email</a></li>
                    <li><a href="@Url.Action("LogOut","Login")">Çıkış</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>